section#images.flex.flex-wrap.px-48.py-48
    - for ( i = 0; i < 2; ++ i )
        .flex.items-center( class = `w-1/2 ${ i !== 0
            ? 'my-48'
            : '' }`
        )
            img(
                src   = `./assets/img/img${ i === 0
                    ? 5
                    : 6
                }.jpg`
                class = i !== 0
                    ? 'w-2/3'
                    : 'w-3/4'
            )

        .flex( class = `w-1/2 ${ i !== 0
            ? 'justify-center items-end'
            : 'justify-end items-start' }`
        )
            img.object-contain(
                src   = `./assets/img/img${ i === 0
                    ? 4
                    : 2
                }.jpg`
                class = i !== 0
                    ? 'w-5/6'
                    : 'w-3/4'
            )
    .flex.justify-center
        img.mt-36.px-12( src = './assets/img/img7.jpg' )
