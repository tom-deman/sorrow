-
    const platforms = [
        {
            name : 'Youtube',
            color: 'hover:text-red-600',
            link : ''
        },
        {
            name : 'Soundcloud',
            color: 'hover:text-orange-600',
            link : ''
        }
    ];


header.bg-center.h-screen.flex.flex-col.px-8.justify-center.items-center.relative

    h1.text-neutral-200.-mt-24.text-center.animate__animated.animate__fadeInDown Tom Torment
        p.text-center "Sorrow"
    .flex.justify-between.text-neutral-200.mt-10( class = 'lg:w-1/6 md:w-1/3 w-3/4' )

        each element in platforms
            a.cursor-pointer(
                class  = `${ element.color }`
                href   = element.link
                target = '_blank'
                rel    = 'noopener noreferrer'
            )
                .flex.flex-col.items-center.animate__animated.animate__fadeIn.animate__delay-1s
                    i.fa-brands.text-5xl( class = `fa-${ element.name.toLowerCase() }` )
                    p.font-light.tracking-widest.text-sm.mt-5= element.name

    a( href = '#tracklist' ): i.fa-solid.fa-chevron-down.text-gray-300.text-xl.font-light.absolute.bottom-12.border.border-gray-400.rounded-full.p-3.cursor-pointer(
        class = 'hover:border-gray-300 hover:text-gray-200 animate__animated animate__fadeIn animate__delay-1s'
        style = 'left: 50%; transform: translateX( -50% );'
    )
